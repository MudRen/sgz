/// troop.c
inherit M_TROOP;
void setup()
{
	if(file_name(previous_object())!=TROOP_D)
	{
		write("非法复制.\n");
		this_object()->remove();
		return;
	}
}
void setupa(int p_id)
{
    string c_id;
    put_id(p_id);
    clear_id();
    c_id=TROOP_D->get_troops(p_id,"name");
    set_id("troop"+p_id, c_id);
   set_relations("on");
    set_unit("个");
    set_max_capacity(VERY_LARGE*20);
    // So people will see: Sitting on the horse you see Rust...
    set_preposition("on");
    
    set_in_room_desc(c_id+"(troop"+p_id+")");
   set_clean_up(1);
}
